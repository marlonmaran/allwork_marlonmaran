#:kivy 1.0

<login>:

    MDFloatLayout:
        id:login_layout
        md_bg_color: 1,1,1,1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint:{"center_y": .95}

        Image:
            source: "lobo2.png"
            size_hint: .36, .36
            pos_hint: {"center_x": .22, "center_y": .8}

        MDLabel:
            text: "Atras"
            font_size: "18sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint: {"center_x": .615, "center_y": .949}
        MDLabel:
            text: "Larm182"
            font_size: "32sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint: {"center_x": .917, "center_y": .849}
        MDLabel:
            text: "Soluciones LTDA"
            font_size: "18sp"
            font_name: "Poppins-Regular.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .915, "center_y": .790}
        MDTextField:
            id:input_email
            hint_text:"Ingresa Tu Email"
            helper_text: ""
            font_name: "Poppins-Regular.ttf"
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5, "center_y": .52}
            
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        Image:
            source: "lobo2.png"
            size_hint: .10, .10
            pos_hint: {"center_x": .90, "center_y": .54}

        MDTextField:
            id:input_password
            hint_text:"Ingresa Tu Password"
            helper_text: ""
            font_name: "Poppins-Regular.ttf"
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5, "center_y": .42}
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            password: True

        Image:
            source: "lobo2.png"
            size_hint: .10, .10
            pos_hint: {"center_x": .90, "center_y": .44}

        MDTextButton:
            text: "Â¿Has olvidado la Password?"
            font_size:"9sp"
            font_name: "Poppins-Regular.ttf"
            hiling: "center"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .715, "center_y": .370}

        MDFlatButton:
            text: "Ingresar"
            size_hint: .79, .08
            font_name: "Poppins-Regular.ttf"
            pos_hint: {"center_x": .50, "center_y": .25}

            canvas.before:
                Color:
                    rgb: 41/255, 135/255, 168/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            on_release: root.connect()
                



    


